	  r_G22 = ggeo[gbase+p_GGEO_TT*p_Np];
	  
	  r_GwJ = ggeo[gbase+p_GGEO_JW*p_Np];
	  
	  //	    printf("G=[%f,%f,%f;%f,%f;%f]\n", r_G00,r_G01, r_G02,r_G11,r_G12, r_G22);
	  
	}
      }
      
      @barrier("local");
      
      for(int j=0;j<p_Nq;++j;@inner(1)){
	for(int i=0;i<p_Nq;++i;@inner(0)){
	  
	  // share u(:,:,k)
	  s_q[j][i] = r_q[k];
	  
	  r_qt = 0;
	  
#pragma unroll p_Nq
	  for(int m = 0; m < p_Nq; m++) {
	    r_qt += s_D[k][m]*r_q[m];
	  }
	}
      }
      
      @barrier("local");
      
      for(int j=0;j<p_Nq;++j;@inner(1)){
	for(int i=0;i<p_Nq;++i;@inner(0)){
	  
	  dfloat qr = 0.f;
	  dfloat qs = 0.f;
	  
#pragma unroll p_Nq
	  for(int m = 0; m < p_Nq; m++) {
	    qr += s_D[i][m]*s_q[j][m];
	    qs += s_D[j][m]*s_q[m][i];
	  }
	  
