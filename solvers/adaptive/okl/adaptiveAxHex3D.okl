	  s_Gqr[j][i] = (r_G00*qr + r_G01*qs + r_G02*r_qt);
	  
	  // put this here for a performance bump
	  r_Gqt = (r_G02*qr + r_G12*qs + r_G22*r_qt);
	  r_Auk = r_GwJ*lambda*r_q[k];
	}
      }
      
