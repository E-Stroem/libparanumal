	      r_Aq[m] += s_D[k][m]*r_Gqt; // DT(m,k)*ut(i,j,k,e)
	      r_Auk   += s_D[m][i]*s_Gqr[j][m];
	    }
	  }
	  
	  r_Aq[k] += r_Auk;
	}
      }
    }
    
    // write out
    
    for(int j=0;j<p_Nq;++j;@inner(1)){
      for(int i=0;i<p_Nq;++i;@inner(0)){
	
#pragma unroll p_Nq
	for(int k = 0; k < p_Nq; k++){
	  const dlong id = element*p_Np +k*p_Nq*p_Nq+ j*p_Nq + i;
	  Aq[id] = r_Aq[k];
	}
      }
    }
  }
